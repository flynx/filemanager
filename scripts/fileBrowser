#!/usr/bin/bash

DIR=${1:-`pwd`}


DIR="$DIR" \
	go run lines \
		-l debug.log \
		-c 'echo "../"; ls -F --group-directories-first --dereference-command-line-symlink-to-dir "$DIR" ' \
		-k F3:'@ [ -d "${LEFT_TEXT%[*/=>@|]}" ] || less "$DIR/${TEXT_LEFT%[*/=>@|]}"' \
		-s 'DIR=> [ -d "${DIR}/${TEXT_LEFT%[*/=>@|]}" ] && realpath -s "$DIR/${TEXT_LEFT%[*/=>@|]}" || realpath -s "$DIR" \n Update' \
		--span-separator="â”‚" \
		--title ' $DIR %SPAN' \
		-b 

